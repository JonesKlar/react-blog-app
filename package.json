{
  "name": "react-blog-app",
  "private": false,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://jonesklar.github.io/react-blog-app",
  "description": "A simple blog app built with React and Vite.",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonesklar/react-blog-app.git"
  },
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run start:api\"",
    "start:api": "json-server --watch public/db.json --port 5000",
    "build": "npm run clean && vite build",
    "preview": "vite preview",
    "lint": "eslint .",
    "setup": "npm install -g json-server && npm install && npm run dev",
    "fresh": "npm install && npm run dev",
    "serve:prod": "concurrently \"npm run start:api\" \"npm run preview\"",
    "predeploy": "npm run build", 
    "deploy": "gh-pages -d dist --repo https://github.com/jonesklar/react-blog-app.git",
    "clean": "rmdir /s /q dist"
  },
  "browserslist": [
    "last 5 Chrome versions",
    "last 5 Firefox versions",
    "last 5 Safari versions",
    "last 5 iOS versions",
    "last 5 Edge versions",
    "not dead",
    "not IE 11"
  ],
  "dependencies": {
    "@tailwindcss/vite": "^4.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "react-router": "^7.6.0",
    "react-toastify": "^11.0.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@tailwindcss/postcss": "^4.1.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "daisyui": "^5.0.35",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "postcss": "^8.5.3",
    "sass": "^1.87.0",
    "tailwindcss": "^4.1.5",
    "vite": "^6.3.5"
  }
}