# .gitattributes

# Never normalize line endings in node_modules or dist
node_modules/** -text
dist/**        -text

# (You can also explicitly force LF in your source files if you like:)
*.js   text eol=lf
*.jsx  text eol=lf
*.ts   text eol=lf
*.tsx  text eol=lf
*.css  text eol=lf
*.html text eol=lf
